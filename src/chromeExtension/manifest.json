{
  "manifest_version": 2,
  "name": "Halidator Extension",
  "version": "1.0",
  "description": "Validate HTML using Halidator",
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}