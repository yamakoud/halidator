{
  "name": "halidator",
  "version": "0.0.1",
  "description": "HTML and Layout Inspector and Validator",
  "main": "dist/halidator.js",
  "types": "dist/halidator.d.ts",
  "keywords": [
    "html",
    "validator",
    "inspector",
    "layout",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@testing-library/jest-dom": "^6.4.6",
    "@types/express": "^4.17.21",
    "@types/istanbul-lib-coverage": "^2.0.6",
    "@types/istanbul-lib-report": "^3.0.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "@types/supertest": "^6.0.2",
    "babel-loader": "^9.1.3",
    "browserify-fs": "^1.0.0",
    "buffer": "^6.0.3",
    "eslint-plugin-jest": "^28.6.0",
    "express": "^4.19.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "string_decoder": "^1.3.0",
    "supertest": "^7.0.0",
    "terser": "^5.31.1",
    "ts-jest": "^29.1.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.2",
    "util": "^0.12.5",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  },
  "scripts": {
    "test:browser": "jest --testEnvironment=jsdom --testMatch='**/browser/**/*.test.ts'",
    "test:node": "jest --testEnvironment=node --testMatch='**/node/**/*.test.ts'",
    "test:core": "jest --testMatch='**/core/**/*.test.ts'",
    "test": "npm run test:browser && npm run test:node && npm run test:core",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build:browser": "webpack --config webpack.config.browser.js --mode production",
    "build:node": "tsc -p tsconfig.json",
    "build": "npm run build:browser && npm run build:node",
    "build:chrome-extension": "webpack --config webpack.config.chrome-extension.js",
    "build:all": "npm run build && npm run build:chrome-extension",
    "dev:browser": "webpack --config webpack.config.browser.js --mode development --watch",
    "dev:node": "webpack --config webpack.config.node.js --mode development --watch",
    "prepublishOnly": "npm run test && npm run build",
    "serve": "http-server -p 8080",
    "tsc:noEmit": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "jsdom": "^24.1.0"
  }
}
