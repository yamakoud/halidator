{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types"],
    "types": ["chrome"]
  },
  "include": [
    "src/**/*.ts",
    "src/types/global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
