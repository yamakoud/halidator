{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/chromeExtension/**/*.ts"
  ],
  "exclude": ["src/browser/**/*", "node_modules", "**/*.test.ts"]
}
